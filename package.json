{
  "name": "waffles",
  "homepage": "https://github.com/datacamp/design-system",
  "description": "The DataCamp design system.",
  "keywords": [
    "design system",
    "style guide",
    "catalog",
    "react",
    "javascript",
    "react",
    "sass",
    "webpack",
    "components"
  ],
  "version": "0.1.0",
  "license": "UNLICENSED",
  "private": true,
  "author": "DataCamp",
  "contributors": [
    "Dan Denney <dd.subscriptions@gmail.com>",
    "Jordan Wade <jjwade31@gmail.com>",
    "Aaron Bates <aaron@aaronbates.me>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/datacamp/design-system.git"
  },
  "main": "catalog/index.js",
  "scripts": {
    "bootstrap": "lerna clean --yes && lerna bootstrap && lerna run prepare",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "yarn lint --fix",
    "test": "lerna run test",
    "type-check": "lerna run type-check",
    "build": "lerna run build",
    "publish-packages": "lerna publish --conventional-commits",
    "commitlint:ci": "commitlint --config commitlint.config.js --from \"origin/master\""
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/config-conventional": "^8.0.0",
    "babel-eslint": "^10.0.1",
    "commitlint": "^8.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-emotion": "^10.0.7",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.4.0",
    "lerna": "^3.15.0",
    "prettier": "^1.18.2"
  },
  "browserslist": [
    "last 2 versions",
    "Firefox ESR",
    "not IE < 11"
  ],
  "engines": {
    "yarn": "^1.15.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "workspaces": {
    "packages": [
      "packages/docs/*",
      "packages/other/*",
      "packages/react-components/*",
      "packages/stylesheets/*",
      "packages/tools/*"
    ],
    "nohoist": [
      "@datacamp/waffles-core/@datacamp/waffles-tokens",
      "@datacamp/waffles-core/extract-text-webpack-plugin",
      "**/css-loader",
      "**/css-loader/**",
      "**/sass-loader",
      "**/sass-loader/**",
      "**/style-loader",
      "**/style-loader/**",
      "**/postcss-loader",
      "**/postcss-loader/**",
      "@datacamp/waffles-catalog-doc-site/**"
    ]
  }
}
