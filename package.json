  },
  "main": "catalog/index.js",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "catalog-start": "catalog start",
    "catalog-build": "catalog build",
    "start": "npm run catalog-start",
