    "build-css": "node-sass-chokidar ./packages/core/scss/ingredients.scss ./catalog/build/static/ingredients.css",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o catalog/build/ --watch --recursive",
    "test": "npm run lint && npm run unit-test",
    "unit-test": "jest"
  },
  "dependencies": {
    "catalog": "3.6.0",
    "react": "16.6.3",
    "react-dom": "16.6.3",
  },
  "devDependencies": {
    "babel-core": "6.26.2",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "cz-lerna-changelog": "2.0.1",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.7.1",
    "enzyme-to-json": "3.3.5",
    "eslint": "5.10.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
