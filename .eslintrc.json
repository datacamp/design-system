{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "plugins": ["prettier", "emotion"],
  "rules": {
    "prettier/prettier": "error",
    "react/jsx-filename-extension": "off",
    "emotion/styled-import": "error",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "packages/**/src/*.spec.js",
          "src/**/__mocks__/**",
          "test/helpers",
          ".storybook/**.js",
          "**/*.stories.js",
          "**/catalog.config.js",
          "**/webpack.config.js",
          "**/test/*",
          "packages/other/**/*.js"
        ]
      }
    ]
  },
  "globals": {},
  "env": {
    "browser": true
  },
  "parser": "babel-eslint",
  "settings": {},
  "root": true,
  "overrides": [
    {
      "files": [
        "packages/**/src/*.spec.js",
        "packages/**/test/*.spec.js",
        "src/**/__mocks__/**",
        "test/helpers"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
